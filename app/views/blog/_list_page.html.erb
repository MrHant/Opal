<table cellpadding=0 cellspacing=0 style="width:100%">
	<tr>
		<td align=left style="text-align:left;vertical-align:bottom"> 
			<h1 class="title"> <%= link_to page.title, {:action => "page", :controller => "pages", :id => page} %></h1>							
		</td>
		<td align=right style="text-align:right;vertical-align:middle">
			<%= friendly_date page.created_at %>
			<% if page.user %>
				by <b><%= link_to  "#{h page.user.username}", {:action => "user", :controller => "browse", :id => page.user}, :title => "#{page.user.username}"  %></b>
				<%= user_avatar(page.user, :size => "tiny") %>
			<% end %>										
			<% if @logged_in_user.is_admin?  %>
				<%= link_to "<img src=\"/themes/#{@setting[:theme]}/images/icons/edit.png\" class=\"icon\" title=\"Edit\">", {:action => "edit", :controller => "pages", :id => page.id, :type => page.page_type.capitalize} %>
				<%= link_to "<img src=\"/themes/#{@setting[:theme]}/images/icons/delete.png\" class=\"icon\" alt=\"Delete\" title=\"Delete\" border=0>", { :action => 'delete', :controller => "pages", :id => page.id, :type => page.page_type.capitalize}, :confirm => "Are you sure you want to delete this?" %>
			<% end %>																						
	 	</td>									
	</tr>
</table>

<div class="spacer"></div>

<div style="height:10px"></div>
<%= page.content %>
<div style="height:10px"></div>
