<div id="side">
		<%= render :partial => "menu" %>
</div>
<div id="main">
   <div class="box_2 blog_page page" style="margin-bottom:10px">
		<%= render :partial => "blog/list_page", :locals => {:page => @page} %>
   </div>
   
   <div class="" align=left style="margin-bottom:10px" id="comments_section">
   		<% if @page_comments.size > 0 || Setting.get_setting_bool("allow_page_comments") %>
			<div class="box_2" style="margin-bottom:10px">
				<h2 class="title"><%= pluralize(@page_comments.size, PageComment.human_name) %></h2>					
				<%= page_entries_info @page_comments, :entry_name => PageComment.human_name %>
	   			<%= render :partial =>  "pages/list_page_comments", :locals => {:comments => @page_comments} %>
				<div align=center><%= will_paginate @page_comments %></div>																   			
	   		</div>
		<% end %>
		<% if Setting.get_setting_bool("allow_page_comments")   %>   
		   <div class="box_2" align=left id="comment_form">			
				<h3 class="title"><%= t("label.item_new", :item => PageComment.human_name) %></h3>
			 	<% if !@setting[:allow_anonymous_comments] && @logged_in_user.anonymous? %>
					<%= t("notice.user_not_logged_in") %>
				<% else %>	
					<%= form_tag  :action => 'create_page_comment', :controller => "pages", :id => @page.id  %>
					   	<%= render :partial =>  "pages/page_comment_form" %>
						<input type="submit" value="<%= t("label.item_create", :item => PageComment.human_name) %>" class="button_1">
					</form>				
				<% end %>	
		   </div>
		<% end %>				
   </div>

</div>
