<table style="width:100%" cellpadding=0 cellspacing=0>
	<tr>
		<td>
			<div id="edit_group_box_<%= @group.id %>" class="box_style_2" style="margin-bottom:5px;" align=center>
				<h2 class="title">Editing Group: <b><%= h @group.name %></b></h2>

					<%= form_tag  :action => 'update', :controller => "/groups", :id => @group.id  %>
						<p><label >Name</label><br/>
						<input id="form_name_box" name="group[name]" onblur="blur_input('form_name_box')" onfocus="focus_input('form_name_box')" size="30" type="text" / value="<%= @group.name %>"></p>

						<p><label >Description</label><br/>
						<input id="form_description_box" name="group[description]" onblur="blur_input('form_description_box')" onfocus="focus_input('form_description_box')" size="50" type="text" value="<%= @group.description %>" /></p>
		
						<input type="submit" value="Update">
					</form>
			</div>
			<div class="box_style_2" style="margin-bottom:5px;" align=center>
				<h2 class="title">
					<img src="/themes/<%= @setting[:theme] %>/images/icons/plugins.png" class="icon">
					Plugin Permissions for <b><%= h @group.name %></b>
					<a href="javascript:toggle_expanding_box('plugin_permissions_box','plugin_permissions_expand_link')" id="plugin_permissions_expand_link">
						<img src="/themes/<%= @setting[:theme] %>/images/icons/open.png" class="icon" title="Expand">
					</a>
				</h2>
				<div id="plugin_permissions_box" style="display:none">
					<div class="box_style_1" align=center style="margin-bottom:5px;">
							<img src="/themes/<%= @setting[:theme] %>/images/icons/warning.png" class="icon">
							These permissions affect <u>every <%= @setting[:item_name] %></u> in <%= @setting[:title] %>.
					</div>					
					<div class="box_style_1" align=center style="margin-bottom:5px;">
							<img src="/themes/<%= @setting[:theme] %>/images/icons/info.png" class="icon">
							These permissions will only affect users besides the <%= @setting[:item_name] %> owner and Admins, since <%= @setting[:item_name] %> owners always have full permissions for their own <%= @setting[:item_name] %>'s plugins.  
					</div>
					<%= form_tag ( {:action => 'update_plugin_permissions', :controller => "/groups", :id => @group.id } , :id => "plugin_permissions_form") %>
					 	<% if !@group.is_admin_group? %>						
							<div align=right style="margin:5px 7px 0px 0px" class="plugin_unselected" > Check All <input type='checkbox' name='checkall' onclick="toggle_all_checkboxes('plugin_permissions_form');"> </div>
						<% end %>							


						<% for plugin in @plugins %>
					   		<div id="plugin_<%= plugin.id %>" class="plugin_unselected" style="padding:5px;"  onmouseover = "change_class('plugin_<%= plugin.id %>','plugin_hover')" onmouseout="change_class('plugin_<%= plugin.id %>','plugin_unselected')"  align=left>
								<table cellpadding=0 cellspacing=0 style="width:100%;">
							  		<tr> 
							  			<td align=left >
							  				<h2><%= plugin.title %>s </h2>
										</td>
										<td align=right style="padding:2px;width:300px">
											<h3>
												Read
												<input type="checkbox" name="plugin_permission[<%= plugin.id %>][can_read]" value="1" <%= "CHECKED" if  @group.has_plugin_permission?(:plugin => plugin, :permission_type => :read) %> <%= "DISABLED" if @group.is_admin_group? %>>												
											</h3>
											<i><%= @group.name %> can view <%= plugin.title %>s for any <%= @setting[:item_name] %>.</i>
											<div class="spacer"></div>
											
											<h3>
												Create
												<input type="checkbox" name="plugin_permission[<%= plugin.id %>][can_create]" value="1" <%= "CHECKED" if @group.has_plugin_permission?(:plugin => plugin, :permission_type => :create) %> <%= "DISABLED" if @group.is_admin_group? %>> 
											</h3>
											<i><%= @group.name %> can create <%= plugin.title %>s for any <%= @setting[:item_name] %>.</i>
											<div class="spacer"></div>
											
											<h3>
												Require Approval?
												<input type="checkbox" name="plugin_permission[<%= plugin.id %>][requires_approval]" value="1" <%= "CHECKED" if  @group.has_plugin_permission?(:plugin => plugin, :permission_type => :requires_approval) %> <%= "DISABLED" if @group.is_admin_group? %>> 
											</h3>
											<i>New <%= plugin.title %>s created by <%= @group.name %> must be approved by the <%= @setting[:item_name] %> owner.</i>
											<div class="spacer"></div>
											
											<h3>	
												Update
												<input type="checkbox" name="plugin_permission[<%= plugin.id %>][can_update]" value="1" <%= "CHECKED" if  @group.has_plugin_permission?(:plugin => plugin, :permission_type => :update) %> <%= "DISABLED" if @group.is_admin_group? %>> 
											</h3>
											<i><%= @group.name %> can edit <%= plugin.title %>s for any <%= @setting[:item_name] %>.</i>
											<div class="spacer"></div>
											
											<h3>
												Delete
												<input type="checkbox" name="plugin_permission[<%= plugin.id %>][can_delete]" value="1" <%= "CHECKED" if  @group.has_plugin_permission?(:plugin => plugin, :permission_type => :delete) %> <%= "DISABLED" if @group.is_admin_group? %>>
											</h3>
											<i><%= @group.name %> can delete <%= plugin.title %>s from any <%= @setting[:item_name] %>.</i>
											<div class="spacer"></div>
											
																						 											 
										</td>														
									</tr>
								</table>
							</div>	  				
						<% end %>

						

						<br>
						
						<input type="submit" value="Save">
					</form>
					
				</div>
			</div>			
		</td>
   	    <td style="width:5px;">  </td>
		<td class="sidebar_column">
			<div>
								
				<div class="box_style_1" align=left style="margin-bottom:5px;">
					<h2 class="title">Group Info</h2>
					Last Update: <b><%= friendly_date @group.updated_at %></b>		<br>					
					Creation Date: <b><%= friendly_date @group.created_at %></b>		<br>
				</div>	
				<% if !@group.is_deletable? %>
					<div class="box_style_1" align=center style="margin-bottom:5px;">
							<img src="/themes/<%= @setting[:theme] %>/images/icons/failure.png" class="icon">
							You cannot delete this group.  
					</div>
				<% end %>										
			</div>
		</td>
	</tr>
</table>
<br>












