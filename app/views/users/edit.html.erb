<table style="width:100%" cellpadding=0 cellspacing=0>
	<tr>
	<td class="sidebar_column">
			<div>
				<div class="box_style_2" align=center style="margin-bottom:5px;" >
					<h2 class="title"><%= h @user.username %></h3>
					<%= user_avatar(@user) %>
				</div>				
				<div class="box_style_2" align=center style="margin-bottom:5px;">				
					<img src="/themes/<%= @setting[:theme] %>/images/icons/logs.png" class="icon">
					<%= link_to "View #{h @user.username}'s Activity", {:controller => "logs", :action => "for_user", :id => @user.id, :anchor => "activity"}%>
				</div>	
				
				<div class="box_style_2" align=center style="margin-bottom:5px;">				
					<img src="/themes/<%= @setting[:theme] %>/images/icons/mail.png" class="icon"> 				
					<%= link_to "View #{h @user.username}'s Messages", {:controller => "messages", :action => "for_user", :id => @user.id, :anchor => "activity"}%>
				</div>		

				<div class="box_style_2" align=center style="margin-bottom:5px;">				
					<img src="/themes/<%= @setting[:theme] %>/images/icons/delete.png" class="icon"> 				
					<%= link_to "Delete #{h @user.username}", { :action => 'delete', :controller => "users", :id => @user.id, :user_id => @user.id}, :confirm => "Are you sure you want to delete this User? All items, reviews, comments, messages, etc. they created will be deleted too!" %>
				</div>		
							
				<div class="box_style_1" align=left style="margin-bottom:5px;">									
					<h2 class="title">Group</h2>
					<div style="height:5px"></div>
					<div align=center>
					<% form_tag :action => 'change_group', :id => @user.id do %>
						<%= render :partial => "/groups/select_group", :locals => {:groups => Group.find(:all), :options => {:id_to_select => @user.group_id} }%> 
						<div style="height:5px"></div>
						<input type="submit" value="Save">
					<% end %>
					</div>	
				</div>										
				<div class="box_style_1" align=left style="margin-bottom:5px;">
					<h2 class="title">User Info</h2>
					Last Login: <b><%= @user.last_login ? "#{friendly_date @user.last_login}" : "Never" %></b><br>
					Last Login IP: <b><%= @user.last_login_ip %></b><br>
					<br>
					Last Update: <b><%= friendly_date @user.updated_at %></b>		<br>					
					Signup Date: <b><%= friendly_date @user.created_at %></b>		<br>
					Registered from IP: <b><%= @user.registered_ip %></b><br>
				</div>					
				<div class="box_style_1" align=left style="margin-bottom:5px;">
					<h2 class="title">Options</h2>
						<%= link_to "<img src=\"/themes/#{@setting[:theme]}/images/icons/mail.png\" class=\"icon\"  alt=\"\" title=\"Send Verification Email\"> Send Verification Email", { :action => 'send_verification_email', :id => @user.id} %><br>
						<%#= link_to "<img src=\"/themes/#{@setting[:theme]}/images/icons/mail.png\" class=\"icon\"  alt=\"\" title=\"Send Verification Email\">", { :action => 'send_verification_email', :controller => "/admin/main", :id => @user.id} %>						
						
						Account Verified: <b><%= @user.is_verified? ? "Yes" : "No" %></b> <%= link_to "<img src=\"/themes/#{@setting[:theme]}/images/icons/cycle.png\" class=\"icon\"  alt=\"Change\" title=\"Change\"> Change", { :action => 'toggle_user_verified', :controller => "users", :id => @user.id}, :confirm => "Are you sure you want to change this?" %>											
						Account Enabled: <b><%= @user.is_enabled? ? "Yes" : "No" %></b> <%= link_to "<img src=\"/themes/#{@setting[:theme]}/images/icons/cycle.png\" class=\"icon\"  alt=\"Change\" title=\"Change\"> Change", { :action => 'toggle_user_disabled', :controller => "users", :id => @user.id}, :confirm => "Are you sure you want to change this?\nIf you're disabling this account, the user will receive a message saying their account is disabled whenever they log in." %>						
				</div>			
			</div>
		</td>
		   	    <td style="width:5px;">  </td>

		<td>


					
		
			<div id="edit_user_box_<%= @user.id %>" class="box_style_2" style="margin-bottom:5px;" align=center>
				<%= form_tag  :action => 'update', :controller => "/users", :id => @user.id  %>
					<input type="hidden" name="id" value="<%= @user.id %>">
				
					<h2 class="title"><%= h @user.username %>'s Account</h2>
					<input type="hidden" name="id" value="<%= @user.id %>">

					<p><label for="user_username">Username</label><br/>
					<%= text_field 'user', 'username', :id => "form_username_box_#{@user.id}", :onfocus => "focus_input('form_username_box_#{@user.id}')", :onblur => "blur_input('form_username_box_#{@user.id}')"  %></p>

					<p><label for="user_first_name">First name</label><br/>
					<%= text_field 'user', 'first_name', :id => "form_firstname_box_#{@user.id}", :onfocus => "focus_input('form_firstname_box_#{@user.id}')", :onblur => "blur_input('form_firstname_box_#{@user.id}')"  %></p>
					
					<p><label for="user_last_name">Last name</label><br/>
					<%= text_field 'user', 'last_name', :id => "form_lastname_box_#{@user.id}", :onfocus => "focus_input('form_lastname_box_#{@user.id}')", :onblur => "blur_input('form_lastname_box_#{@user.id}')"  %></p>
					
					<p><label for="user_email">Email</label><br/>
					<%= text_field 'user', 'email', :id => "form_email_box_#{@user.id}", :onfocus => "focus_input('form_email_box_#{@user.id}')", :onblur => "blur_input('form_email_box_#{@user.id}')"  %></p>
					
					<p><label for="user_created_at">Created at</label><br/>
					<%= datetime_select 'user', 'created_at' %></p>
					
				
					Admin? <input type="checkbox" name="is_admin" value="1" <% if @user.is_admin? %>CHECKED<% end %>><br><br>
					

					<input type="submit" value="Update">
				</form>
			</div>							

			<div class="box_style_2" align=center style="margin-bottom:5px;" >

				<h2 class="title">Change <b><%= h @user.username %></b>'s Password</h2>					
				<%= form_tag :action => 'change_password'  %>
					<input type="hidden" name="id" value="<%= @user.id %>">
				
					<p><label for="post_updated_at">New Password</label><br/>
					<%= password_field 'user', 'password' , :id => "form_password_box_#{@user.id}", :onfocus => "focus_input('form_password_box_#{@user.id}')", :onblur => "blur_input('form_password_box_#{@user.id}')"%></p>
				
					<p><label for="post_updated_at">Confirm Password</label><br/>
					<%= password_field 'user', 'password_confirmation', :id => "form_password_confirm_box_#{@user.id}", :onfocus => "focus_input('form_password_confirm_box_#{@user.id}')", :onblur => "blur_input('form_password_confirm_box_#{@user.id}')" %></p>
					
					<input type="submit" value="Change Password">
				</form>
			</div>	
		
			<div class="box_style_2" align=center style="margin-bottom:5px;" >
				<h2 class="title"><b><%= h @user.username %></b>'s Info</h2>					
				<% form_tag :action => 'update_user_info', :id => @user.id do %>
					<% @user_info = @user.user_info %>
					<table>
						<tr>
							<td valign=top>Location</td>
							<td><input name="user_info[location]" style="font-size:10px;width:240px;" value="<%= h @user.user_info.location %>"></td>
						</tr>						
						<tr>
							<td valign=top>Description</td>
							<td><textarea name="user_info[description]" style="font-size:10px;width:240px;height:100px;overflow:auto"><%= h @user.user_info.description %></textarea></td>
						</tr>
						<tr>
							<td valign=top>Interests</td>
							<td><textarea name="user_info[interests]" style="font-size:10px;width:240px;height:100px;overflow:auto"><%= h @user.user_info.interests %></textarea></td>
						</tr>
					</table>
					  <div class="spacer"></div>
					  <h3 class="title">Notifications</h3>
					  <table style="width:100%">
						<tr>
							<td align=left>Email me when someone sends me a message</td>
							<td align=right>
								<%= check_box "user_info", "notify_of_new_messages" %>
							</td>
						</tr>
					  </table>	
					  <br>					
			 		 <div align=center><%= submit_tag 'Save' %></div>
				<% end %>
			</div>		

						
		</td>
	
	</tr>
</table>
<br>
<div align=center><img src="/themes/<%= @setting[:theme] %>/images/icons/arrow_left.png" class="icon" title="Back"> <%= link_to "Back", { :action => 'index'}  %></div>












