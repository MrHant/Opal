<% if my_group_plugin_permissions[plugin.id].can_read? || item.is_user_owner?(@logged_in_user) || @logged_in_user.is_admin? %>	
	<% discussion_count = PluginDiscussion.count(:all, :conditions => ["item_id = ?", item.id]) %>
	<% if discussion_count > 0 %>
		<img src="/themes/<%= @setting[:theme] %>/images/icons/discussion.png" class="icon" title="This <%= @setting[:item_name] %> has <%= discussion_count %>  <%= plugin.human_name.pluralize %>." alt="">
		<%= link_to "#{discussion_count} #{plugin.human_name.pluralize}", {:action => "view", :controller => "items", :id => item.id, :anchor => "#{plugin.human_name.pluralize}"}, :title => "This #{@setting[:item_name]} has #{discussion_count}  #{plugin.human_name.pluralize}" %>
		<br>
	<% end %>
	
<% end %>
