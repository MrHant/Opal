<%# Main Menu %>
<div id="main_menu">
	<ul class="main_menu">

		<% for page in Page.all(:page_type => "Public", :root_only => true, :display_in_menu => true) %>
		<li>
			<%# handle selection & special pages %>
			<%= 
				if !page.name.blank? # name is set, which means it's a special page
					if page.name == "home"
						link_to page.title, {:action => "index", :controller => "browse"},  :class => (params[:controller] == "browse" && params[:action] == "index") ? "selected" : ""
					elsif page.name == "items"
						link_to page.title, {:action => "index", :controller => "items"},  :class => params[:controller] == "items" ? "selected" : ""
					elsif page.name == "blog"
						link_to page.title, {:action => "index", :controller => "blog"},  :class => params[:controller] == "blog" ? "selected" : ""
					else # unknown special page 
 						link_to_page(page, :class => params[:controller] == "pages" && params[:id] == page.to_param ? "selected" : "")
					end					
				else # not a special page
 					link_to_page(page, :class => params[:controller] == "pages" && params[:id] == page.to_param ? "selected" : "")
				end
			%>
		</li>
		<% end %>	
	</ul>
</div>



