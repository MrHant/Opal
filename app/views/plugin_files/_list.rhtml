<% if my_group_plugin_permissions[plugin.id].can_read? || item.is_user_owner?(@logged_in_user) || @logged_in_user.is_admin? %>
	<div class="item_files_box">
		<% files_count = PluginFile.count(:all, :conditions => ["item_id = ? and is_approved = '1'", item.id], :order => "created_at DESC", :limit => 5) %>
		<% if files_count > 0 %>
			<img src="/themes/<%= @setting[:theme] %>/images/icons/file.png" class="icon"   title="" alt="">
			<%= link_to "#{files_count} #{plugin.human_name.pluralize}", {:action => "view", :controller => "items", :id => item.id, :anchor => "#{plugin.human_name.pluralize}"} %>			
		<% end %>
	</div>
<% end %>
