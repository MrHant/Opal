<% features = PluginFeature.find(:all, :order => "order_number ASC") %>
<table align=center style="width:100%" cellpadding=0 cellspacing=0>
	 <tr>
	  <td align=left class="sidebar_column" valign=top style="padding:0px;text-align:center">
			<%= render :partial => "/settings/menu" %>

	  </td>
	  <td style="width:5px;"></td>
	  <td align=left valign=top>
			<div class="plugin_box">
					<div class="title">
						<%= @plugin.title %>s
					</div>
					<%= @plugin.title %>s are shared atttributes that <%= @setting[:item_name_plural] %> can have unique values for. Every <%= @setting[:item_name] %> can have a unique value for each of the <%= @plugin.title %> attributes seen below. For example: If you created  a <%= @plugin.title %> attribute below called <b>Price</b>, a user could then give one of their <%= @setting[:item_name_plural] %> a value of <b>$20.00</b>.  
			</div>
			<br>
			<div >
				<table style="width:100%" cellpadding=0 cellspacing=0>
					<tr>
						<td  valign=top>
			 
						</td>
	  					<td style="width:5px;"></td>						
						<td  valign=top>
							<div align=left>
							<div class="box_style_2" align=center style="width:200px;margin-bottom:5px;">
								<img src="/themes/<%= @setting[:theme] %>/images/icons/new.png" class="icon"  alt="" title="New" >
								<%= link_to "Add new #{@plugin.title}", {:action => "new", :controller => "plugin_features"} %>
							</div>			
							</div>					
							<div class="box_style_1">	
								<% if features.size > 0 %>															
									 	<% for feature in features %>
										   <div>
												<table style="width:100%">
													<tr>
														<td align=left>
															<h3>
																<%= feature_icon feature %>
																<%= feature.name %>
																<% if feature.is_required %>
																	<img src="/themes/<%= @setting[:theme] %>/images/icons/required.png" class="icon"  alt="" title="This is required.">
																<% end %>												
															</h3>											
														</td>
														<td align=right style="width:180px">
															<%  if feature.description && feature.description != "" %>
																<%= icon("help", "#{feature.description}", "help") %>
															<% end %>														
															<% if feature.feature_type == "option" %>
																<%= link_to "#{feature.plugin_feature_value_options.size} Options", { :action => 'edit', :controller => "plugin_features", :id => feature.id, :anchor => "options"} %>																									
																<img src="/themes/<%= @setting[:theme] %>/images/icons/new.png" class="icon">
																<%= link_to "Add Option", { :action => 'edit', :controller => "plugin_features", :id => feature.id, :anchor => "options"} %>
															<% end %>																									
															<%= link_to "<img src=\"/themes/#{@setting[:theme]}/images/icons/edit.png\" class=\"icon\"  alt=\"Edit\" title=\"Edit\" border=0>", { :action => 'edit', :controller => "plugin_features", :id => feature.id} %>										
															<%= link_to "<img src=\"/themes/#{@setting[:theme]}/images/icons/delete.png\" class=\"icon\"  alt=\"Delete\" title=\"Delete\" border=0>", { :action => 'delete', :controller => "plugin_features", :id => feature.id}, :confirm => "Are you sure you want to delete this #{@plugin.title} Object? Every one of its values for every #{@setting[:item_name]} will be deleted too!" %>
																		
														</td>
													</tr>
										   		</table>
				
												<div class="spacer" style="margin:5px 0px 5px 0px"></div>
				
											</div>
										<% end %>
								<% else %>
									<div align=center>
										No <%= @plugin.title %>s have been created yet.
									</div>
								<% end %>											

							</div>					 
						</td>
					</tr>
				</table>
			</div>
			<div align=center style="margin-top:10px;">
				<img src="/themes/<%= @setting[:theme] %>/images/icons/arrow_left.png" class="icon" title="Back">
				<%= link_to "Back", { :action => 'index', :controller => "plugins"}  %>	
			</div>
	  </td> 
	 </tr>
</table>