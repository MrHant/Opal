<div class="section">
	<table align=center style="width:100%" cellpadding=0 cellspacing=0>
		 <tr>
		  <td align=left class="sidebar_column" valign=top style="padding:0px;text-align:center">
				<%= render :partial => "/settings/menu" %>
	
		  </td>
		  <td style="width:5px;"></td>
		  <td align=left valign=top>
			<div class="header">
					<h2 class="title">
						<%= t("label.item_edit", :item => PluginFeature.human_name) %>
					</h2>
			</div>
			
			
			
			<div>
				<div class="box_style_2a" style="margin-bottom:5px">
					<table style="width:100%" cellpadding=0 cellspacing=0 class="">
						<tr>
							<td style="width:50%;padding-right:5px;" align=left>
								<h3 class="title"><%= t("single.details") %></h3>	
						    	<% form_for(@plugin_feature, :url => { :action => 'update',  :controller => "plugin_features",:id => @plugin_feature.id  }, :method => "post") do |f| %>
									<div class="box_style_2" style="margin-bottom:5px">
	
										<%= render :partial => "plugin_features/form", :locals => {:feature => @plugin_feature, :f => f} %>								 
										
										<div align=center>
											<%= f.submit t("label.item_save", :item => PluginFeature.human_name), :class => "button_1" %>
										</div>
									</div>
								<% end %>								
							</td>
							<td style="width:50%;padding-left:5px;" align=left>
								<% if @plugin_feature.feature_type == "option" %>
									<h3 class="title"><%= @plugin_feature.name %> <%= PluginFeatureValueOption.human_name.pluralize %></h3>
									<!--<i>Allows users to select a predefined value for <%= @plugin_feature.name %>.</i>-->
																	
									<div class="box_style_2" style="margin-bottom:10px;">
									   <div>					   	
					   						<%= render :partial => "plugin_features/list_options", :locals => {:feature => @plugin_feature} %>		
									   </div>
									</div>									
	
								   <h3 class="title"><%= t("label.item_new", :item =>  @plugin_feature.name + " " + PluginFeatureValueOption.human_name) %> </h3>	
									<div class="box_style_2" style="margin-bottom:5px">
																							   			
							    		<% form_for(@plugin_feature_value_option, :url => { :action => 'create_option', :controller => "plugin_features", :id => @plugin_feature.id }, :method => "post") do |f| %>
											<%= render :partial => "plugin_features/form_for_option", :locals => {:option => PluginFeatureValueOption.new(:plugin_feature_id => @plugin_feature.id), :f => f} %>
										
											<div align=center>
												<%= submit_tag t("label.item_create", :item => PluginFeatureValueOption.human_name), :class => "button_1" %>
											</div>									   
									   <% end %>										
									</div>
											 
							<% end %>							
							</td>		
						</tr>
					</table>		
				</div>
	
			
				<div align=center style="margin-top:10px;">
					<%= link_to icon("arrow_left") + " " + t("single.back"), {:action => "index"}  %>
				</div>
		  </td> 
		 </tr>
	</table>	
</div>	