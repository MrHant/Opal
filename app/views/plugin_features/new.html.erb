<% @feature = PluginFeature.new %>
<table align=center style="width:100%" cellpadding=0 cellspacing=0>
	 <tr>
	  <td align=left class="sidebar_column" valign=top style="padding:0px;text-align:center">
			<%= render :partial => "/settings/menu" %>

	  </td>
	  <td style="width:5px;"></td>
	  <td align=left valign=top>
			<div class="box_style_2a">
			  <div class="plugin_box">	
				<div class="title">
					Add A New <%= @plugin.human_name %>
				</div>
			  </div>
			  This will add a new shared <%= @plugin.human_name.downcase %> attribute for every item. For Example, if you wanted users to add a <b>Price</b> value to a <%= @setting[:item_name] %>, you could add <b>"Price"</b> here(without the quotes).
			  <br><br>			  

			   <div>
			   	    <% form_for(@plugin_feature, :url => { :action => 'create', :controller => "plugin_features"}, :method => "post") do |f| %>

							<%= render :partial => "plugin_features/form", :locals => {:feature => @plugin_feature, :f => f} %>
							 
							<br>
							<div align=center>
								<%= f.submit t("label.item_create", :item => PluginFeature.human_name), :class => "button_1" %>
							</div>
					<% end %>
				 </div>
			</div>	
			
			<div align=center style="margin-top:10px;">
				<%= link_to icon("arrow_left") + " " + t("single.back"), :back %>
			</div>
	  </td> 
	 </tr>
</table>			