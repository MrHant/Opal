<% if my_group_plugin_permissions[plugin.id].can_read? || item.is_user_owner?(@logged_in_user) || @logged_in_user.is_admin? %>
	<% review_score = PluginReview.average(:review_score, :conditions => ["item_id = ? and is_approved = '1'", item.id]) %>
	<% review_score ||= 0 %>
	<% if review_score > 0 || @setting[:review_type] == "Stars" %>
		<%= score(:type => @setting[:review_type], :max => @setting[:score_max].to_i, :value => review_score) %>
	<% end %>
<% end %>