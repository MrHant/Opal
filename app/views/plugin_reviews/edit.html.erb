<%= render :partial => "items/item_header", :locals => {:item => @item, :options => {:show_item_info => true, :show_item_title => true}} %>


<table align=center style="width:100%" cellpadding=0 cellspacing=0>
	 <tr>
	  <td align=left class="sidebar_column" valign=top style="padding:0px;text-align:center">
		<div align=left class="box_style_1" style="margin-bottom:5px">	  	
			<h3 class="title">
				<img src="/themes/<%= @setting[:theme] %>/images/icons/info.png" alt="" title="Information" class="icon">
				<%= @plugin.human_name %>s
			</h3>
			<%= @plugin.human_name %>s are a great way to describe your <%= @setting[:item_name_plural] %> in detail.
		</div>
		<%= render :partial => "shared/html_allowed" %>				
				
	  </td>
	  <td style="width:5px;">
	  </td>
	  <td align=left valign=top >
		<div class="box_style_2" style="margin-bottom:5px">
			<h2 class="title"><%= t("label.item_edit", :item => @plugin.human_name) %> <%= t("single.from") %> <%= @review.user.username %> </h2>
			<div class="spacer"></div>
			<%= form_tag :action => 'update', :controller => "plugin_reviews", :id => @item.id  %>
				<input name="review_id" value="<%= @review.id %>" type="hidden">
				<%= render :partial => "form", :locals => {:review => @review} %>
				<br>
				<div align=center><%= submit_tag t("label.item_save", :item => @plugin.human_name), :class => "button_1" %></div>
			</form>
		</div>
	  </td> 
	 </tr>
</table>	

										
<div align=center><img src="/themes/<%= @setting[:theme] %>/images/icons/arrow_left.png" class="icon" title="Back"> <%= link_to t("single.back"), { :action => 'view', :controller => "items", :id => @item.id, :anchor => "#{@plugin.name}s"}  %></div>



