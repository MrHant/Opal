<%= error_messages_for :review %>
<div class="plugin_box">
	<div align=center>
		<h3><%= label "review", "review_score", PluginReview.human_attribute_name(:score) %></h3>	
			 <table>
			     <tr>
			     	<td align=left>
						 <% if @setting[:review_type] == "Stars"  %>							
							<script type="text/javascript">
								$(function(){
								 $('.score-star').rating({
								  callback: function(value, link){
								   	$("#review_score").val(value); // set input value 
									$("#review_score_display").html(value); // set visual score 
								   	//alert(value);
								  }
								 });
								});
							</script>
							
							<div>
								<% for i in 1..@setting[:score_max] %>																	     
									<input name="review_stars" type="radio"  class="score-star" value="<%= i %>" <% if i == review.review_score.to_i %> checked="checked" <% end %> />
								<% end %>
								<input type="hidden" id="review_score" name="review[review_score]" value="<%= review.review_score %>" >						
							</div>
						 <% elsif @setting[:review_type] == "Slider"  %>
						 	<table cellpadding=0 cellspacing=0>
						 		<tr>
						 			<td style="vertical-align:middle">
										<input name="review[review_score]" type="range" id="review_score_range" value="<%= review.review_score %>" min="<%= @setting[:score_min] %>" max="<%= @setting[:score_max] %>" />
										<script type="text/javascript">
											$(document).ready(function() {
												$("#review_score_range").rangeinput();
											});
										</script>							 				
						 			</td>
									<td style="padding-left:5px;vertical-align:middle">
										<span><%= t("label.out_of") %> <b><%= @setting[:score_max] %></b></span>															
									</td>
						 		</tr>
							</table>						 		 
						 <% elsif @setting[:review_type] == "Number" %>
							<input name="review[review_score]" type="text" id="review_score" value="<%= review.review_score.to_i %>" style="width:50px;text-align:center" />
							<span><%= t("label.out_of") %> <b><%= @setting[:score_max] %></b></span>
						 <% else %>
						 	Unknown Review type: <b><%= t("label.item_unknown", :item => t("plugin_settings.review_type"), :name => @setting[:review_type]) %></b>										 
						 <% end %>				     		
			     	</td>					
				</tr>
			</table>
	</div>
</div>
<br>
<div align=right style="">
	<a href="javascript:toggleEditor('<%= "form_review_box_#{review.id}" %>');"><%= t("label.toggle_editor") %></a>
</div> 
<b><%= text_area 'review', 'review', :style => "width:100%;height:500px", :class => "mceEditor", :id => "form_review_box_#{review.id}",  :onfocus => "focus_input('form_content_box_#{review.id}')", :onblur => "blur_input('form_review_box_#{review.id}')" %></b>
<br>


