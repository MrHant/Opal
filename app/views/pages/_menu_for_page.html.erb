<div class="box_1" id="page_menu">
		<table style="width:100%" cellpadding=0 cellspacing=0>
			<tr>
				<td align=left>
					<h2 class="title"><%= link_to_page page %></h2>
				</td>
				<td align=right>
					<% if @logged_in_user.is_admin? %>
						<% if page.is_public_page? %>						
							<%= link_to icon("new") + " " + t("label.item_new_child", :item => Page.human_name), {:action => "new", :controller => "pages", :id => page} %>
						<% end %>	
					<% end %>
				</td>
			</tr>
		</table>
		<div class="spacer"></div>

		<div class="pages">				
			<% for subpage in page.pages %>
				<%= descend_page(subpage) %>
			<% end %>	
		</div>
	   <%= raw "<hr>" if page.pages.size > 0 %> 
	   <% if get_setting_bool("allow_user_registration") %>
	   		<div class="indent"> 
				<% page =  Page.get_system_page("Terms Of Service")%>
				<%= link_to_page(page)  %> 			
			</div>
	   <% end %>
	   <% if get_setting_bool("enable_contact_us") %>
	   	  <div class="indent"><%= link_to t("page.title.contact_us"), {:action => "contact_us", :controller => "about"} %></div>
 	   <% end %>
</div>
