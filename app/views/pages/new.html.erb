<%= form_tag  :action => 'create', :controller => "pages" %>
	<table align=center style="width:100%" cellpadding=0 cellspacing=0>
		 <tr>
		  <td align=left class="sidebar_column" valign=top style="padding:0px;text-align:center">
				<%= render :partial => "pages/menu" %>				
				<% if @page.is_public_page? %>
					<div align=left class="box_style_1" style="margin-bottom:5px;">
						<h3 class="title">Parent Page</h3>
						<div class="indent">
							<table style="width:100%" cellpadding=0 cellspacing=0>
								<tr>
									<td align=left>
										None	
									</td>
									<td align=right>
										<input type="radio" value="0" name="page[page_id]" <%= "CHECKED" if @page.page_id == 0 %>> 
									</td>	
								</tr>
							</table>						
						</div>
						<div class="spacer"></div>				
						<% for page in Page.find(:all, :conditions => ["page_type = ? and page_id = 0", "public"], :order => "title ASC") %>
							<%= descend_page(page, :make_radio_button => true, :id_to_ignore => @page.id, :id_to_check => @page.page_id) %>
						<% end %>
					</div>
				<% end %>				  		  
		  </td>
		  <td style="width:5px;">
		  </td>
		  <td align=left valign=top >
				<div class="plugin_box box_style_2" style="margin-bottom:5px">
					<div class="title">
						Create New <%= params[:type] %> Page
					</div>
					
						<input type="hidden" name="page[page_type]" value="<%= params[:type].downcase %>">
						<%= render :partial => "form", :locals => {:page => @page}  %>
						<div align=center><input type="submit" value="Create"></div>	
				</div>
		  </td> 
		 </tr>
	</table>	
</form>
		
<div align=center><img src="/themes/<%= @setting[:theme] %>/images/icons/arrow_left.png" class="icon" title="Back"> <%= link_to "Back", { :action => 'index'}  %></div>
