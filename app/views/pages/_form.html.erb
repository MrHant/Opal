<%= error_messages_for :page %>
<table style="width:100%;" cellpadding=0 cellspacing=0>
	<tr>
		<td align=left>
			<% if page.is_system_page? %>
				<h3 class="title"><%= page.title %></h3>
			<% else %>
				<div align=left style="margin-bottom:5px">
					<%= text_field 'page', 'title', :id => "form_title_box_#{page.id}", :disabled => !page.title_editable  %>
					<%= label "page", "title" %>
				</div>
			<% end %>
			<div align=left style="margin-bottom:5px">
				<% if page.is_system_page? %>
					<i><%= page.description %></i>
				<% else %>
					<%= text_field 'page', 'description', :id => "form_description_box_#{page.id}", :disabled => !page.description_editable  %>
					<%= label "page", "description" %>		
				<% end %>
			</div>								
		</td>
		<td align=right style="width:250px">
			<% if !page.is_system_page? %>
				<table style="width:100%;" cellpadding=1 cellspacing=0>
					<tr>
						<td class="icon_column"><%= check_box "page", "published" %></td>
						<td class="icon_column"><img src="/themes/<%= @setting[:theme] %>/images/icons/public.png" class="icon"  alt="" title="" ></td>					
						<td><b><%= label "page", "published" %></b></td>
						<td class="icon_column"><img src="/themes/<%= @setting[:theme] %>/images/icons/help.png" class="help icon"  alt="" title="<%= Page.human_attribute_name(:published_description) %>" ></td>							
					</tr>
				</table>
				<table style="width:100%;" cellpadding=1 cellspacing=0>
					<tr>
						<td class="icon_column"><%= check_box "page", "locked" %></td>
						<td class="icon_column"><img src="/themes/<%= @setting[:theme] %>/images/icons/locked.png" class="icon"  alt="" title="" ></td>					
						<td><b><%= label "page", "locked" %></b></td>
						<td class="icon_column"><img src="/themes/<%= @setting[:theme] %>/images/icons/help.png" class="help icon"  alt="" title="<%= Page.human_attribute_name(:locked_description) %>" ></td>							
					</tr>
				</table>				
				<% if page.is_public_page? %>
					<table style="width:100%;" cellpadding=1 cellspacing=0>
						<tr>
							<td class="icon_column"><%= check_box "page", "display_in_menu" %></td>
							<td class="icon_column"><img src="/themes/<%= @setting[:theme] %>/images/icons/public.png" class="icon"  alt="" title="" ></td>					
							<td><b><%= label "page", "display_in_menu" %></b></td>
							<td class="icon_column"><!--<img src="/themes/<%= @setting[:theme] %>/images/icons/help.png" class="help icon"  alt="" title="<%= Page.human_attribute_name(:display_in_menu_description) %>" >--></td>							
						</tr>
					</table>	
				<% end %>								
					<table style="width:100%;" cellpadding=1 cellspacing=0>
						<tr>
							<td class="icon_column"><%= check_box "page", "redirect" %></td>
							<td class="icon_column"><%= icon("redirect") %></td>					
							<td>
								<b><%= label "page", "redirect" %></b><br>
							</td>
							<td class="icon_column"></td>							
						</tr>
						<tr>
							<td></td>
							<td></td>							
							<td colspan=2>
								<%= text_field "page", "redirect_url" %>
							</td>
														
						</tr>
					</table>									
			<% end %>
		</td>
	</tr>
</table>
<div style="height:10px"></div>

				
<div align=right>
	<%= link_to_function(t("label.toggle_editor"), "toggleEditor('form_content_box_#{page.id}')") %>
</div> 

<div id="editor_wrapper">
	<%= text_area 'page', 'content', :style => "width:100%;height:500px", :class => "mceEditor", :id => "form_content_box_#{page.id}", :disabled => !page.content_editable %>
</div>

<div style="height:20px"></div>		

<% if page.is_blog_post? %>			
<div align=left style="margin-bottom:20px">
		<%= datetime_select 'page', 'created_at'  %>
		<%= label "page", "created_at" %>		
</div>	
<% end %>	



													