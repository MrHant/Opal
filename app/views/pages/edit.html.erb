<%= form_tag  :action => 'update', :controller => "pages", :id => @page.id  %>
	<div id="side">
			  	<%= render :partial => "pages/menu" %>
				<div class="box_1" align=left style="margin-bottom:5px;">
					<h3 class="title"><%= icon("details") %> <%= t("label.additional_info") %></h3>
					<%= Page.human_attribute_name(:updated_at) %>: <b><%= friendly_date @page.updated_at %></b>		<br>					
					<%= Page.human_attribute_name(:created_at) %>:  <b><%= friendly_date @page.created_at %></b>		<br>
					<% if @page.user %>
						<%= Page.human_attribute_name(:user_id) %> 			
						<b><%= link_to  "#{h @page.user.username}", {:action => "user", :controller => "browse", :id => @page.user}, :title => "#{@page.user.username}"  %></b>
						<%= user_avatar(@page.user, :size => "tiny") %>
					<% end %>	
				</div>			
				<% if @page.is_system_page? %>
					<!--
					<div align=left class="box_1" style="margin-bottom:5px;">
						<h3 class="title"><%= icon("info") %> Edit Only</h3>		
							You can only modify the content(not the title or description) of system pages. You cannot delete system pages.
					</div>
					-->				
				<% elsif @page.is_public_page? %>
					<div align=left class="box_1" style="margin-bottom:5px;">
						<h3 class="title"><%= Page.human_attribute_name(:page_id) %></h3>
						<div class="indent">
							<table style="width:100%" cellpadding=0 cellspacing=0>
								<tr>
									<td align=left>
										<%= t("single.none") %>
									</td>
									<td align=right>
										<input type="radio" value="0" name="page[page_id]" <%= "CHECKED" if @page.page_id == 0 %>> 
									</td>	
								</tr>
							</table>						
						</div>
						<div class="spacer"></div>				
						<% for page in Page.find(:all, :conditions => ["page_type = ? and page_id = 0", "public"], :order => "title ASC") %>
							<%= descend_page(page, :make_radio_button => true, :id_to_ignore => @page.id, :id_to_check => @page.page_id) %>
						<% end %>
					</div>
				<% end %>		
				<%= render :partial => "shared/html_allowed" %>				
				
	</div>
	<div id="main">
		<input type="hidden" name="page[page_type]" value="<%= @page.page_type.downcase %>">
		<div class="box_2" style="margin-bottom:5px" align=left>
			<h2 class="title">
				<%= t("label.item_edit", :item => @page.human_name) %>
			</h2>
			<hr>
			<div style="margin-bottom:10px"></div>
			<%= render :partial => "form", :locals => {:page => @page} %>
			<div align=center>
				<%= submit_tag t("single.save"), :class => "button_1" %>
			</div>					
		</div>
	
	</div>	
</form>

<div align=center>						
	<%= link_to icon("arrow_left") + " " + t("single.back"), {:action => "index", :type => @page.page_type}  %>
</div>