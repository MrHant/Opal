<%= form_tag  :action => 'update', :controller => "pages", :id => @page.id  %>
	<table align=center style="width:100%" cellpadding=0 cellspacing=0>
		 <tr>
		  <td align=left class="sidebar_column" valign=top style="padding:0px;text-align:center">
		  	<%= render :partial => "pages/menu" %>
			<div class="box_style_1" align=left style="margin-bottom:5px;">
				<h3 class="title">Page Info</h3>
				Last Update: <b><%= friendly_date @page.updated_at %></b>		<br>					
				Creation Date: <b><%= friendly_date @page.created_at %></b>		<br>
				<% if @page.user %>
					Added By: 			
					<b><%= link_to  "#{h @page.user.username}", {:action => "user", :controller => "browse", :id => @page.user}, :title => "#{@page.user.username}"  %></b>
					<%= user_avatar(@page.user, :size => "tiny") %>
				<% end %>	
			</div>			
			<% if @page.is_system_page? %>
				<div align=center class="box_style_1" style="margin-bottom:5px;">		
					<img src="/themes/<%= @setting[:theme] %>/images/icons/info.png" alt="" title="Information" class="icon">
						You can only modify the content(not the title or description) of system pages. You cannot delete system pages.
				</div>				
			<% elsif @page.is_public_page? %>
				<div align=left class="box_style_1" style="margin-bottom:5px;">
					<h3 class="title">Parent Page</h3>
					<div class="indent">
						<table style="width:100%" cellpadding=0 cellspacing=0>
							<tr>
								<td align=left>
									None	
								</td>
								<td align=right>
									<input type="radio" value="0" name="page[page_id]" <%= "CHECKED" if @page.page_id == 0 %>> 
								</td>	
							</tr>
						</table>						
					</div>
					<div class="spacer"></div>				
					<% for page in Page.find(:all, :conditions => ["page_type = ? and page_id = 0", "public"], :order => "title ASC") %>
						<%= descend_page(page, :make_radio_button => true, :id_to_ignore => @page.id, :id_to_check => @page.page_id) %>
					<% end %>
				</div>
			<% end %>		
		  </td>
		  <td style="width:5px;">
		  </td>
		  <td align=left valign=top >
					<input type="hidden" name="page[page_type]" value="<%= params[:type].downcase %>">
					<div class="plugin_box box_style_2" style="margin-bottom:5px" align=left>
						<div class="title">
							Editing <%= params[:type] %> Page: <b class="highlight"><%= @page.title %></b>
						</div>
						<%= render :partial => "form", :locals => {:page => @page} %>
						<div align=center><input type="submit" value="Update"></div>					
					</div>
		  </td> 
		 </tr>
	</table>		
	<div align=center><img src="/themes/<%= @setting[:theme] %>/images/icons/arrow_left.png" class="icon" title="Back"> <%= link_to "Back", { :action => 'index'}  %></div>
</form>

