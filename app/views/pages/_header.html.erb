<% if @logged_in_user.is_admin? %>
	<div class="box_style_1" style="margin-bottom:5px" id="page_header_box">
		<table style="width:100%" cellpadding=0 cellspacing=0>
			<tr>
				<td align=left>		
             		<%= "<img src=\"/themes/#{@setting[:theme]}/images/icons/private.png\" class=\"icon help\" title=\"This page is not published and cannot be seen by others.\">" if !page.published %>                        																		
				</td>
				<td align=right>
						<% if page.is_public_page? %>						
							<%= link_to icon("new") + " New Child Page", {:action => "new", :controller => "pages", :id => page}, :title => "Add new child page to #{page.title}" %>
						<% end %>								
						<%= link_to "<img src=\"/themes/#{@setting[:theme]}/images/icons/edit.png\" class=\"icon\" alt=\"Edit\"> Edit", {:action => "edit", :controller => "pages", :id => page}, :title => "Make changes to this page." %>
						<% if page.is_public_page? %>						
							<%= link_to "<img src=\"/themes/#{@setting[:theme]}/images/icons/delete.png\" class=\"icon\" alt=\"Delete\"> Delete", {:action => "delete", :controller => "pages", :id => page}, :confirm => "Are you sure you want to delete this page?", :title => "Delete this page." %>
						<% end %>						
				</td>
			</tr>
		</table>		
	</div>
<% end %>
<%= nav_link_page page %>