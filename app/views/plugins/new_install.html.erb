<div class="section">
	<div id="side">
		<%= render :partial => "/settings/menu" %>
	</div>

	<div id="main">
		
				<div class="header">					
					<table style="width:100%;" >
						<tr>
							<td align=left>
								<h2 class="title">
									<%= Plugin.model_name.human.pluralize %>
								</h2>						
							</td>
							<td align=right >
							</td>
						</tr>
					</table>
				</div>
			
			
			<ul class="plugin_tabs_horizontal"> 
				    <li>
				    	<%= link_to Plugin.model_name.human.pluralize, {:action => "index", :controller => "plugins"}%>
					</li> 
				    <li>
				    	<%= link_to t("label.item_install", :item => Plugin.model_name.human), {:action => "new_install", :controller => "plugins"}, :class => "current"  %>
					</li> 																																					
			</ul>			
			<div class="plugin_panes_horizontal"> 	
				<div></div>	  			
				<div>
					<h2 class="title"><%= t("label.item_install", :item => Plugin.model_name.human)%></h2>
					<div class="spacer"></div>
					<!--This will install a new plugin into <%= @setting[:title] %>.<br><br>-->
					<div class="box_2" align=center>
						<% form_tag ({:action => "install", :controller => "plugins"}, :multipart => true) do %>
						   <table>
							   	<tr>
							   		<td valign=top>
							   			<div class="box_2a">
											<%= render :partial => "shared/upload_form" %>
										</div>
							   		</td>
							   	</tr>							
							   </table>
							   <br>
							   <input type="submit" value="<%= t("single.install") %>" class="button_1">					
						<% end %>									
					</div>
				</div>
			</div>
	</div>	
</div>			