<%
	record ||= nil
%>

<% link_to_user(record.user, :avatar => true) if record.respond_to?(:user_id) && record.user_id != @logged_in_user.id? && record.user_id != @item.user_id %>

<% if record.respond_to?(:is_approved?) && @item.is_editable_for_user?(@logged_in_user) %>
	<%= icon("approved", t("single.approved"), "icon help") if record.is_approved? %> 
	<%= icon("unapproved", "#{t("single.not")} #{t("single.approved")}", "icon help") if !record.is_approved? %> 																				
	<%= link_to icon("cycle", t("label.item_change", :item => t("single.approval"))), {:action => "change_approval", :id => record.item_id, "#{record.class.system_name.downcase}_id".to_sym => record.id, :controller => record.class.name.pluralize.underscore}, :confirm => t("confirm.general"), :class => "transparent" %>
	<%= icon("spacer") %>
<% end %>		

<% if @logged_in_user.group.plugin_permissions[record.class.name].can_create? || @item.is_user_owner?(@logged_in_user) || @logged_in_user.is_admin? %>
	<%= link_to icon("edit"), {:action => "edit", :controller => record.class.name.pluralize.underscore, :id => @item.id, "#{record.class.system_name.underscore}_id".to_sym => record.id} %>
<% end %>

<% if @logged_in_user.group.plugin_permissions[record.class.name].can_delete? || @item.is_user_owner?(@logged_in_user) || @logged_in_user.is_admin? %>
    <%= link_to icon("delete"), { :action => 'delete', :controller => record.class.name.pluralize.underscore, :id => @item.id, "#{record.class.system_name.underscore}_id".to_sym => record.id}, :confirm => t("confirm.item_delete", :item => record.class.model_name.human) %>																
<% end %>