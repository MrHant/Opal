<h2 class="title"><%= t("single.popular") %> <%= @setting[:item_name_plural] %></h2>
<div class="spacer"></div>
<% counter = 1 %>
<table style="width:100%" cellpadding=0 cellspacing=1>		
	<% for item in Item.popular_items %>
		<tr>
			<td align=left>
				<h4>
					<%= link_to item_thumbnail(item, :class => "pinky"), {:action => "view", :controller => "items", :id => item }, :title =>  h(item.name) %>
					<%= counter%>. <b><%= link_to "#{h truncate(item.name, :length => 14)}", {:action => "view", :controller => "items", :id => item}, :title =>  h(item.name) %></b>
				</h4>					
			</td>
			<td align=right style="width:80px;">
				<div class="indent">
					<i><%= item.views %> <%= t('activerecord.attributes.item.views', :count => item.views) %><%#= Item.human_attribute_name(:views, :count => item.views) %></i>
				</div>					
			</td>
		</tr>
		<% counter += 1 %>											
	<% end %>
</table>
	
