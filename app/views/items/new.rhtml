<div class="box_style_1" id="new_item_box">
      <h2 class="title">Create a New <%= @setting[:item_name] %></h2>
	   <%= show_page Page.get_system_page("New Item") %>
	   
	   <div style="margin-top:5px;">
	   		<%= form_tag  :action => 'create', :controller => "items" %>
			<%= render :partial => "form", :locals => {:item => @item} %>
			<br>
				<div align=center>
					<input type="submit" value="Create <%= @setting[:item_name] %>" >
				</div>
			</form>	
		</div>
</div>