<% images_plugin = Plugin.find_by_name("Image") %>
<% features_plugin = Plugin.find_by_name("Feature") %>

<div align=left class="item_page_summarized">
	<%= render :partial => "items/item_header", :locals => {:item => item, :options => {:show_item_info => false, :show_item_title => false}} %>
	
	<div style="margin-bottom:10px;" class="item_header_box">		
				<% if images_plugin.is_enabled? %>
					<div class="plugin_box">
						<div class="images">
							<div class="image">
								<%= (item_thumbnail item,  :preview => true) %>
							</div>
						</div>
					</div>				
				<% end %>							

				<div >
					<table cellpadding=0 cellspacing=0>
						<tr>
							<td align=left>
								<div class="name">
									<%= h item.name %>		
								</div>								
							</td>
							<td align=right>
								<% if item.user %>
									<%= link_to user_avatar(item.user, :size => "tiny"), {:action => "user", :controller => "browse", :id => item.user}, :title => h(item.user.username) %>
									<%= Item.human_attribute_name(:user) %><%= link_to item.user.username, {:action => "user", :controller => "browse", :id => item.user} %>		
								<% end %>								
							</td>
						</tr>
					</table>

					
					<div class="description">
						<%= h item.description%>	
					</div>											
					<div style="width:300px;float:right">
						<% if features_plugin.is_enabled? %>
							<% 
								features = PluginFeature.find(:all, :order => "order_number ASC") 
								if item.is_editable_for_user?(@logged_in_user)
									feature_values = PluginFeatureValue.find(:all, :conditions => ["item_id = ?", item.id]) # show all values  
								else 
									feature_values = PluginFeatureValue.find(:all, :conditions => ["item_id = ? and is_approved = '1'", item.id]) # show only approved values
								end  
							%> 		
							<div class="box_2a spacer_vert_left">
								<div class="features">
									<%= render :partial => "plugin_features/list_values", :locals => {:feature_values => feature_values, :plugin => features_plugin, :item => @item} %>
								</div>	
							</div>
						<% end %>							
					</div>								
				</div>				
			</tr>
		</table>
	</div>
	<div class="plugins">
		<% for plugin in plugins %>
			<% if plugin.name != "Image" && plugin.name != "Feature" %>
				<% if my_group_plugin_permissions[plugin.id].can_read? || item.is_user_owner?(@logged_in_user) || @logged_in_user.is_admin?  %>
					<div style="margin-bottom:10px" class="box_2a">
						<%#= render :partial => plugin.partial_path(:type => "view"), :locals => {:plugin => plugin, :item => item, :my_group_plugin_permissions => my_group_plugin_permissions  } %>					
					</div>
				<% end %>
			<% end %>
		<% end %>			
	</div>
	
		
</div>