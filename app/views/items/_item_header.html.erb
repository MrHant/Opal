<script type="text/javascript">	
	opal_setting["item_id"] = <%=  @item.id %>;	
</script>
<% 
	options ||= Hash.new 
	options[:show_item_title] ||= true if options[:show_item_title].nil? # show item title?
	options[:show_item_info] = true if options[:show_item_info].nil? # show item info box?
%>
<% @setting[:show_item_nav_links] = true %>
<%= render :partial => "browse/main_content_top_bar" %>
<div class="item_header_box">
	<% if item.is_editable_for_user?(@logged_in_user) %>
		<div class="box_style_1" style="margin-bottom:10px" id="item_edit_box">
			<table style="width:100%" cellpadding=0 cellspacing=0>
				<tr>
					<td align=left>		
			 			<%= "<img src=\"/themes/#{@setting[:theme]}/images/icons/approved.png\" title=\"This #{@setting[:item_name]} is approved.\" class=\"icon help\">" if item.is_approved? %> 										
			 			<%= "<img src=\"/themes/#{@setting[:theme]}/images/icons/unapproved.png\" title=\"This #{@setting[:item_name]} is not approved.\" class=\"icon help\">" if !item.is_approved? %> 																								
																				
						<% if get_setting_bool("allow_private_items")  %>
								<% if item.is_public? %>
						 			<%= "<img src=\"/themes/#{@setting[:theme]}/images/icons/public.png\" title=\"This is a public #{@setting[:item_name]}, it can be seen by others.\" class=\"icon help\">" %> 										
								<% else %>
						 			<%= "<img src=\"/themes/#{@setting[:theme]}/images/icons/private.png\" title=\"This is a private #{@setting[:item_name]}, it cannot be seen by others.\" class=\"icon help\">" %> 										
								<% end %>
						<% end %>
						<% if item.featured %>							
							<img src="/themes/<%= @setting[:theme] %>/images/icons/featured.png" class="icon help"  alt="" title="This is a featured <%= @setting[:item_name] %>.">
						<% else %>
							<img src="/themes/<%= @setting[:theme] %>/images/icons/not_featured.png" class="icon help"  alt="" title="This is not a featured <%= @setting[:item_name] %>.">																																											 
						<% end %>																		
					</td>
					<td align=right>
						<% if @logged_in_user && @logged_in_user.id != 0  %>
							<%= link_to "<img src=\"/themes/#{@setting[:theme]}/images/icons/new.png\" class=\"icon\" alt=\"New\"> Add New #{@item.category.name} #{@setting[:item_name]} ", {:action => "new", :controller => "items", :id => item.category}, :title => "Add a new #{@setting[:item_name]} to the #{@item.category.name} category." %>
						<% end %>												
						<% if item.is_editable_for_user?(@logged_in_user) %>
							   		<img src="/themes/<%= @setting[:theme] %>/images/icons/logs.png" class="icon">
									<%= link_to "Activity", {:controller => "logs", :action => "for_item", :id => @item.id}, :title => "View the past activity of this #{@setting[:item_name]}." %>						
								<%= link_to "<img src=\"/themes/#{@setting[:theme]}/images/icons/edit.png\" class=\"icon\" alt=\"Edit\"> Edit", {:action => "edit", :controller => "items", :id => item}, :title => "Make changes to this #{@setting[:item_name]}." %>
						<% end %>
						<% if item.is_deletable_for_user?(@logged_in_user) %>
								<%= link_to "<img src=\"/themes/#{@setting[:theme]}/images/icons/delete.png\" class=\"icon\" alt=\"Delete\"> Delete", {:action => "delete", :controller => "items", :id => item}, :confirm => "Are you sure you want to delete this #{@setting[:item_name]}?", :title => "Delete this #{@setting[:item_name]}." %>
						<% end %>							
					</td>
				</tr>
			</table>		
		</div>
	<% end %>
	<table style="width:100%" cellpadding=0 cellspacing=0>
		<tr>
			<td>
				<div class="item_title_box">
					<% if options[:show_item_title] %>
						<table>
							<tr>
								<td>
									<div class="name" id="name">
										<%= h item.name %>								
									</div>		
									<% if get_setting_bool("enable_item_description") %>
										<div class="description" id="description">
											<%= h item.description %>																							
										</div>														
									<% end %>	
								</td>
							</tr>
						</table>
					<% end %>
				</div>
			</td>
			<td>
				<% features_plugin = Plugin.find_by_name("Feature") %>
				
			</td>
			<td align=right>
				<% if options[:show_item_info] %>
					<div class="item_info_box">
							<%= render :partial => "items/item_info", :locals => {:item => item } %>
					</div>
				<% end %>				
			</td>
		</tr>
	</table>
</div>