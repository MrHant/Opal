<%= render :partial => "browse/main_content_top_bar" %>

<script type="text/javascript">	
	opal_setting["item_id"] = <%=  @item.id %>;	
</script>

<div class="header">					
	<% if item.is_editable_for_user?(@logged_in_user) %>
		<div class="box_1 tools" style="margin-bottom:10px" >
			<table style="width:100%" cellpadding=0 cellspacing=0>
				<tr>
					<td align=left>		
			 			<%= raw "<img src=\"/themes/#{@setting[:theme]}/images/icons/approved.png\" title=\"#{Item.human_attribute_name(:approved)}\" class=\"icon help\">" if item.is_approved? %> 										
			 			<%= raw "<img src=\"/themes/#{@setting[:theme]}/images/icons/unapproved.png\" title=\"#{t("single.not")} #{Item.human_attribute_name(:approved)}\" class=\"icon help\">" if !item.is_approved? %> 																								
			 			<%= raw "<img src=\"/themes/#{@setting[:theme]}/images/icons/locked.png\" title=\"#{Item.human_attribute_name(:locked)}\" class=\"icon help\">" if item.locked %> 										
			 			<%= raw "<img src=\"/themes/#{@setting[:theme]}/images/icons/unlocked.png\" title=\"#{t("single.not")} #{Item.human_attribute_name(:unlocked)}\" class=\"icon help\">" if !item.locked %> 																								
																											
						<% if get_setting_bool("allow_private_items")  %>
								<% if item.is_public? %>
						 			<%= raw "<img src=\"/themes/#{@setting[:theme]}/images/icons/public.png\" title=\"#{Item.human_attribute_name(:public)}\" class=\"icon help\">" %> 										
								<% else %>
						 			<%= raw "<img src=\"/themes/#{@setting[:theme]}/images/icons/private.png\" title=\"#{t("single.not")} #{Item.human_attribute_name(:public)}\" class=\"icon help\">" %> 										
								<% end %>
						<% end %>
						<% if item.featured %>							
							<img src="/themes/<%= @setting[:theme] %>/images/icons/featured.png" class="icon help"  alt="" title="<%= Item.human_attribute_name(:featured) + " " + @setting[:item_name] %> ">
						<% else %>
							<img src="/themes/<%= @setting[:theme] %>/images/icons/not_featured.png" class="icon help"  alt="" title="<%= t("single.not") + " " +  Item.human_attribute_name(:featured)%>">																																											 
						<% end %>																		
					</td>
					<td align=right>
						<% if @logged_in_user && !@logged_in_user.anonymous?  %>
							<%= link_to raw("#{icon("new")} #{t("label.item_new", :item => @item.category.name) + " " + @setting[:item_name]}"), {:action => "new", :controller => "items", :id => item.category} %>
						<% end %>												
						<% if item.is_editable_for_user?(@logged_in_user) %>
							   		<img src="/themes/<%= @setting[:theme] %>/images/icons/logs.png" class="icon">
									<%= link_to Log.model_name.human.pluralize, {:controller => "logs", :action => "for_item", :id => @item.id}, :title => t("label.item_view_items", :item => @setting[:item_name], :items => Log.model_name.human.pluralize) %>						
								<%= link_to icon("edit") + " " + t("single.edit") , {:action => "edit", :controller => "items", :id => item}, :title => t("label.item_edit", :item => @setting[:item_name]) %>
						<% end %>
						<% if item.is_deletable_for_user?(@logged_in_user) %>
								<%= link_to icon("delete") + " " + t("single.delete") , {:action => "delete", :controller => "items", :id => item}, :title => t("label.item_delete", :item => @setting[:item_name]), :confirm => t("confirm.item_delete", :item => @setting[:item_name]) %>
						<% end %>							
					</td>
				</tr>
			</table>		
		</div>
	<% end %>
</div>

