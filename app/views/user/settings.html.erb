<h2 class="title">My Settings</h2>
<div class="spacer"></div>
<br>

<div align=center>
<table width="100%">
	<tr>
		<td valign=top align=center>
			<div class="box_style_1" style="width:350px" align=left>
				<h3 class="title">Change My Password</h3>
				<% form_tag :action => 'change_password' do %>
					<table>
						<tr>
							<td>Password</td>
							<td><%= password_field 'user', 'password'  %></td>
						</tr>
						<tr>
							<td>Confirm Password</td>
							<td>	 <%= password_field 'user', 'password_confirmation'  %></td>
						</tr>
					</table>
				
				  <div align=center><%= submit_tag 'Change Password' %></div>
				<% end %>
			</div>
			<br>
			<div class="box_style_1" style="width:350px" align=left>
				<h3 class="title">Change My Icon</h3>
				<% form_tag({:action => 'change_avatar'}, :multipart => true) do %>
					<table>
						<tr>
							<td colspan=2 align=center>
							   <div class="user_avatar" align=center>
									<%= user_avatar(@user) %>
							   </div>						
							</td>
						</tr>
						<tr>
							<td style="width:100px">Select an Image</td>
							<td><input type=file name="file" <% if @user.use_gravatar? %>DISABLED<% end %>></td>
						</tr>
						<tr>
							<td colspan=2 align=center style="font-size:10px">
								Note: All Images are monitored for appropriateness(<b>no adult, explicit, offensive, or otherwise graphic images allowed</b>). Also, all images will be scaled down to 100x100 pixels.
							</td>
						</tr>
						<tr>
							<td style="width:150px">Use <a href="http://www.gravatar.com" class="highlight">Gravatar</a> Instead?</td>
							<td align=right>
								Yes <input type="radio" name="use_gravatar" value="1"<% if @user.use_gravatar? %>CHECKED<% end %>>
								No <input type="radio" name="use_gravatar" value="0"<% if !@user.use_gravatar? %>CHECKED<% end %>
							</td>
						</tr>						
					</table>
				
				   <div align=center><%= submit_tag 'Save' %></div>
				<% end %>
			</div>

		</td>
		<!-- </tr><tr> -->
		<td valign=top align=left>
			<div class="box_style_1" style="width:350px" align=left>
				<h3 class="title">Account Info</h3>
				<table style="width:100%">
					<tr><td align=left>User Name:</td><td align=right><b><%= @user.username %></b></td></tr>
					<tr><td align=left>Real Name:</td><td align=right><b><%= @user.first_name %> <%= @user.last_name %></b></td></tr>
					<tr><td align=left>Email Address:</td><td align=right><b><%= @user.email %></b></td></tr>
					<tr><td align=left>Group:</td><td align=right><b> <%= @user.group.name %></b></td></tr>					
				</table>
			</div>
			<br>			
			<div class="box_style_1" style="width:350px" align=left>
				<h3 class="title">My Info</h3>
				<% @user_info = @user.user_info %>
				<% form_tag :action => 'update_user_info' do %>
					<table>
						<tr>
							<td valign=top>My Location</td>
							<td><input name="user_info[location]" style="font-size:10px;width:240px;" value="<%= h @user.user_info.location %>"></td>
						</tr>						
						<tr>
							<td valign=top>My Description</td>
							<td><textarea name="user_info[description]" style="font-size:10px;width:240px;height:100px;overflow:auto"><%= h @user.user_info.description %></textarea></td>
						</tr>
						<tr>
							<td valign=top>My Interests</td>
							<td><textarea name="user_info[interests]" style="font-size:10px;width:240px;height:100px;overflow:auto"><%= h @user.user_info.interests %></textarea></td>
						</tr>
					</table>
				  <div class="spacer"></div>
				  <h3 class="title">Notifications</h3>
				  <table style="width:100%">
					<tr>
						<td align=left>Email me when someone sends me a message</td>
						<td align=right>
							<%= check_box "user_info", "notify_of_new_messages" %>
						</td>
					</tr>
				  </table>
								  <br>
								  
				  <div align=center><%= submit_tag 'Save' %></div>
				<% end %>
			</div>
		</td>
	</tr>
</table>
</div>