<%= error_messages_for :category  %>
<div id="side">
		<div class="box_2">
				<h2 class="title">
					<img src="/themes/<%= @setting[:theme] %>/images/icons/categories.png" class="icon" > 				
					<%= f.label :category_id  %>
				</h2>
				<div class="indent">
					<table style="width:100%" cellpadding=0 cellspacing=0>
						<tr>
							<td align=left>
								<%= t("single.none") %>	
							</td>
							<td align=right>
								<input type="radio" value="0" name="category[category_id]" <%= "CHECKED" if category.category_id == 0 %>> 
							</td>
						</tr>
					</table>					
				</div>
				<div class="spacer"></div>			
				<% for subcategory in Category.get_parent_categories  %>
					<%= descend_category(subcategory, :include_children => @setting[:include_child_category_items], :make_radio_button => true, :id_to_check => category.category_id, :id_to_ignore => category.id, :truncate_length => 35, :input_name => "category[category_id]")  %>
				<% end %>								
			</div>
			
</div>
<div id="main">
	<table cellpadding=1 cellspacing=1>
				<tr>
					<td><b><%= f.label :name %></b></td>
					<td><%= f.text_field :name %></td>
				</tr>
				<tr>
					<td><b><%= f.label :description %></b></td>
					<td><%= f.text_field :description %><!--<input name="category[description]" type="text" id="category_description_<%= category.id %>" onfocus = "focus_input('category_description_<%= category.id %>')" onblur = "blur_input('category_description_<%= category.id %>')" maxlength=255 value="<%= category.description %>" size=50>--></td>
				</tr>
	</table>
				
</div>		
<div style="clear:both"></div>	