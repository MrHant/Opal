<table cellpadding=0 cellspacing=0>
	<tr>
		<td style="vertical-align:top">


			<table cellpadding=1 cellspacing=1>
						<tr>
							<td><b>Name</b></td>
							<td><input name="category[name]" type="text" id="category_name_<%= category.id %>" value="<%= category.name %>" onfocus = "focus_input('category_name_<%= category.id %>')" onblur = "blur_input('category_name_<%= category.id %>')"></td>
						</tr>
						<tr>
							<td><b>Description</b></td>
							<td><input name="category[description]" type="text" id="category_description_<%= category.id %>" onfocus = "focus_input('category_description_<%= category.id %>')" onblur = "blur_input('category_description_<%= category.id %>')" maxlength=255 value="<%= category.description %>" size=50></td>
						</tr>
			</table>
		<td style="width:10px;">
		</td>
		<td valign=top align=left class="sidebar_column">
			<div class="box_style_0">
				<h2 class="title">
					<img src="/themes/<%= @setting[:theme] %>/images/icons/categories.png" class="icon" > 				
					Parent Category
				</h2>
				<div class="spacer"></div>
				<div class="indent">
					<table style="width:100%" cellpadding=0 cellspacing=0>
						<tr>
							<td align=left>
								None	
							</td>
							<td align=right>
								<input type="radio" value="0" name="category[category_id]" <%= "CHECKED" if category.category_id == 0 %>> 
							</td>
						</tr>
					</table>					
				</div>
				<div class="spacer"></div>			
				<% for subcategory in Category.get_parent_categories  %>
					<%= descend_category(subcategory, :include_children => @setting[:include_child_category_items], :make_radio_button => true, :id_to_check => category.category_id, :id_to_ignore => category.id, :truncate_length => 35, :input_name => "category[category_id]")  %>
				<% end %>								
			</div>
				
		</td>
	</tr>
</table>			