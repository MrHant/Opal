<% if my_group_plugin_permissions[plugin.id].can_read? || item.is_user_owner?(@logged_in_user) || @logged_in_user.is_admin? %>
	<% comments_count = PluginComment.count(:all, :conditions => ["item_id = ?", item.id]) %>
	<img src="/themes/<%= @setting[:theme] %>/images/icons/comments.png" class="icon" title="This <%= @setting[:item_name] %> has <%= comments_count %> <%= plugin.model_name.human(:count => :other) %>." alt="">
	<%= link_to "#{comments_count} #{plugin.model_name.human(:count => :other)}", {:action => "view", :controller => "items", :id => item , :anchor => plugin.model_name.human(:count => :other)}, :title => "This #{@setting[:item_name]} has #{comments_count} #{plugin.model_name.human(:count => :other)}" %>																						
	
<% end %>